{
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./src/*"]
    },
  },
  "include": [
    "src/**/*.ts"
  ]
}
